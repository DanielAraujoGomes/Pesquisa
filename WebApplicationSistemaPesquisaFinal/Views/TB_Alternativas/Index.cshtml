<h2>Lista de Alternativas</h2>

<p>
    @Html.ActionLink("Nova Alternativa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.TB_Questoes.Questao)*@
            <label>Questão</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Alternativa)*@
            <label>Alternativa</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TB_Questoes.Questao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alternativa)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.AlternativaId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.AlternativaId }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.AlternativaId })
            </td>
        </tr>
    }

</table>
